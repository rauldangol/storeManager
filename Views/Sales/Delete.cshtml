@model Sales

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
		</div>
		<div class="mb-3">
			<label asp-for="CustomerName"></label>
			<input asp-for="CustomerName" disabled class="form-control">
			<span asp-validation-for="CustomerName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ContactNumber"></label>
			<input asp-for="ContactNumber" disabled class="form-control">
			<span asp-validation-for="ContactNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Address"></label>
			<input asp-for="Address" disabled class="form-control">
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ProductName"></label>
			<input asp-for="ProductName" disabled class="form-control">
			<span asp-validation-for="ProductName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Category"></label>
			<input asp-for="Category" disabled class="form-control">
			<span asp-validation-for="Category" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Total"></label>
			<input asp-for="Total" disabled class="form-control">
			<span asp-validation-for="Total" class="text-danger"></span>
		</div>
		<button class="btn btn-danger" style="width:170px">Delete</button>
		<a asp-controller="Sales" asp-action="Index" class="btn btn-primary" style="width:170px">Back To List</a>
	</div>
</form>

@section Scripts{
		<partial name="_ValidationScriptsPartial" />
}