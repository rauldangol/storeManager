@model Category

<form method="post">
	<div class ="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
		</div>
		<div class="mb-3">
			<label asp-for="categoryName"></label>
			<input asp-for="categoryName" class="form-control">
			<span asp-validation-for="categoryName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="categoryQuantity"></label>
			<input asp-for="categoryQuantity" class="form-control">
			<span asp-validation-for="categoryQuantity" class="text-danger"></span>
		</div>
		<button class="btn btn-primary" style="width:170px">Create</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:170px">Back To List</a>
	</div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
