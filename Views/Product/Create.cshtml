@using storeManager.ViewModel;
@model storeManager.ViewModel.ProductCategoryViewModel

<form method="post" asp-controller="Product" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Product</h2>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.productName"></label>
			<input asp-for="@Model.Product.productName" class="form-control" />
			<span asp-validation-for="@Model.Product.productName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.productCategory"></label>
			<select asp-for="@Model.Product.productCategory" class="form-control">
        <option value="">-- Select a category --</option>
        @foreach (var category in Model.Categories)
        {
            <option value="@category.categoryName">@category.categoryName</option>
        }
    </select>
			<span asp-validation-for="Product.productCategory" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.productPrice"></label>
			<input asp-for="@Model.Product.productPrice" class="form-control" />
			<span asp-validation-for="@Model.Product.productPrice" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Product.productQuantity"></label>
			<input asp-for="@Model.Product.productQuantity" class="form-control" />
			<span asp-validation-for="@Model.Product.productQuantity" class="text-danger"></span>
		</div>
		<button class="btn btn-primary" style="width:170px">Add</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="width:170px">Back To List</a>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}